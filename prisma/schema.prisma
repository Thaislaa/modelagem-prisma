generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno{
  id String @id @default(uuid())
  nome String @db.VarChar(100)
  email String @unique @db.VarChar(100)
  senha String @db.VarChar(100)
  dtNascimento DateTime? @db.Date @map("dt_nascimento")
  formado Boolean @default(false)
  rg Int?
  endereco Endereco?
  avaliacoes Avaliacao[]
  matricula Matricula[]
  dtCriacao DateTime @default(now()) @map("dt_criacao")
  dtAtualizacao DateTime @updatedAt @map("dt_atualizacao")
  @@map("aluno")
}

model Endereco{
  id String @id @default(uuid())
  rua String @db.VarChar(30)
  bairro String @db.VarChar(30)
  numero Int
  cidade String @db.VarChar(50)
  idAluno String @unique @map("id_aluno")
  aluno Aluno @relation(fields: [idAluno], references: [id], onDelete: Cascade)
  @@map("endereco")
}

model Avaliacao{
  id String @id @default(uuid())
  disciplina String @db.VarChar(30)
  nota Int @db.SmallInt
  dtAvaliacao DateTime @default(now()) @map("dt_avaliacao")
  idAluno String @map("id_aluno")
  aluno Aluno @relation(fields: [idAluno],references: [id], onDelete: Cascade)
  @@map("avaliacao")
}

model Curso{
  id String @id @default(uuid())
  titulo String @db.VarChar(100)
  ementa String @db.VarChar(100)
  cargaHoraria Decimal @map("carga_horaria")
  maxAlunos Int @default(30) @db.SmallInt
  status String
  matriculas Matricula[]
  dtCriacao DateTime @default(now()) @map("dt_criacao")
  dtAtualizacao DateTime @updatedAt @map("dt_atualizacao")
  @@map("curso")
}

model Matricula{
  idAluno String @map("id_aluno")
  idCurso String @map("id_curso")
  dtMatricula DateTime @default(now()) @map("dt_matricula")
  aluno Aluno @relation(fields: [idAluno], references: [id], onDelete: Cascade)
  curso Curso @relation(fields: [idCurso], references: [id], onDelete: Cascade)
  @@id([idAluno, idCurso])
  @@map("matricula")
}

model Material{
  id Int @id @default(autoincrement())
  titulo String @db.VarChar(100)
  descricao String
  link String
  disponivel Boolean
  dtCriacao DateTime @default(now()) @map("dt_criacao")
  dtAtualizacao DateTime @updatedAt @map("dt_atualizacao")
  @@map("material")
}